CXX = c++

CXXFLAGS = -Wall -Wextra -Werror -std=c++98 -g

OBJS =																		\
																			\
					main.o													\
					amateria.o												\
					character.o												\
					cure.o													\
					ice.o													\
					materiasource.o											\
																			\

NAME = interface_and_recap


all: $(NAME)

$(NAME): $(OBJS)
	$(CXX) -o $(NAME) $^ $(LDFLAGS)

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
