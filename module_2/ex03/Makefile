CXX = c++

CXXFLAGS = -Wall -Wextra -Werror -std=c++98

OBJS =																		\
																			\
					main.o													\
					Fixed.o													\
					Point.o													\
					bsp.o													\
																			\

NAME = bsp

all: $(NAME)

$(NAME): $(OBJS)
	$(CXX) -o $(NAME) $^ $(LDFLAGS)

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
