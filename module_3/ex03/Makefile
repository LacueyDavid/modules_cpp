CXX = c++

CXXFLAGS = -Wall -Wextra -Werror -std=c++98

OBJS =																		\
																			\
					main.o													\
					ClapTrap.o												\
					ScavTrap.o												\
					FragTrap.o												\
					DiamondTrap.o											\
																			\

NAME = now_its_weird


all: $(NAME)

$(NAME): $(OBJS)
	$(CXX) -o $(NAME) $^ $(LDFLAGS)

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
